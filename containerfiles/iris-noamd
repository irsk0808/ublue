FROM scratch AS ctx
COPY scripts /
FROM ghcr.io/irsk0808/ublue-iris:latest
RUN --mount=type=bind,from=ctx,source=/,target=/ctx \
    /ctx/unwrap && \
    echo -e "options amdgpu amdgpu.dc=0\nblacklist amdgpu" | tee -a /etc/modprobe.d/blacklist.conf && \
    /ctx/initramfs && \
    ostree container commit
RUN bootc container lint
