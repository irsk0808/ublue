# Main arguments
ARG SOURCE_IMAGE="silverblue"
ARG SOURCE_SUFFIX="-main"
ARG SOURCE_TAG="41"
FROM scratch AS ctx
COPY scripts /

# Import main packages
FROM ghcr.io/ublue-os/akmods-nvidia-open:bazzite-${SOURCE_TAG} AS akmods-nvidia-open
FROM ghcr.io/ublue-os/akmods:bazzite-${SOURCE_TAG} AS akmods
FROM ghcr.io/ublue-os/akmods-extra:bazzite-${SOURCE_TAG} AS akmods-extra
FROM ghcr.io/ublue-os/${SOURCE_IMAGE}${SOURCE_SUFFIX}:${SOURCE_TAG}

# Import system files
COPY sysfiles/common/ /
COPY sysfiles/desktop/ /
COPY sysfiles/logid/ /

# Scripts
RUN --mount=type=bind,from=akmods,src=/rpms,dst=/tmp/kmods-rpms \
    --mount=type=bind,from=akmods-extra,src=/rpms,dst=/tmp/akmods-extra-rpms \
    --mount=type=bind,from=akmods,src=/kernel-rpms,dst=/tmp/kernel-rpms \
    --mount=type=bind,from=akmods-nvidia-open,src=/rpms,dst=/tmp/akmods-rpms \
    --mount=type=bind,from=ctx,source=/,target=/ctx \
    /ctx/copr && \
    /ctx/unwrap && \
    /ctx/akmods && \
    	dnf5 -y install /tmp/akmods-extra-rpms/kmods/kmod-ryzen-smu*.rpm && \
 	dnf5 -y install /tmp/akmods-extra-rpms/kmods/kmod-nct6687d*.rpm && \
    /ctx/cmnpkgs && \
    /ctx/extensions && \
    /ctx/nvidia && \
    /ctx/initramfs && \
    /ctx/cleanup

# Extra packages
RUN dnf5 -y install \
    logiops && \
    ostree container commit
RUN systemctl enable logid && \
    systemctl enable logidrestart.service && \
    ostree container commit

# Finishing touches
RUN sed -i "s/SCX_SCHEDULER=scx_bpfland/SCX_SCHEDULER=scx_rusty/" /etc/default/scx && \
    curl -Lo /usr/lib/sysctl.d/99-bore-scheduler.conf https://github.com/CachyOS/CachyOS-Settings/raw/master/usr/lib/sysctl.d/99-bore-scheduler.conf && \
    sed -i '/^PRETTY_NAME/s/.*/PRETTY_NAME="Fedora Linux (Ublue)"/' /usr/lib/os-release && \
    systemctl enable performance.service && \
    ostree container commit
